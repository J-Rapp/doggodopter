<!DOCTYPE html>
<html>
  <head>
    <title>Snuffle</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'jquery-3.2.1.min' %>
    <%= javascript_include_tag 'cards' %>
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
  </head>

  <body>

    <div class='container'>
      <div class='row'>
        <div class='col-sm-12 text-center'>
          <h1>Snuffle</h1>
          <h2>doggos in need of a forever home</h2>
        </div>
      </div>
    </div>
    <div class='container blue-box text-center'>
      <div class='row'>
        <div class='col-sm-12 text-center'>
          <%= flash[:error] %>
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
