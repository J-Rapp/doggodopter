<%= form_for @user do |f| %>

  <div class='input-group'>
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <%= f.check_box :cats, { class: 'form-control' } %>
  </div>

  <p class='errors'><%= show_errors(@user, :cats) %></p>

  <div class='input-group'>
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <%= f.check_box :children, { class: 'form-control' } %>
  </div>

  <p class='errors'><%= show_errors(@user, :children) %></p>

  <div class='input-group'>
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <%= f.range_field :energy, in: (1..10), class: 'form-control' %>
  </div>

  <p class='errors'><%= show_errors(@user, :energy) %></p>

  <%= f.submit 'Confirm Settings' %>
<% end %>

